<body class="login-img3-body">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="../public/js/login.js" type="text/javascript"></script>
    <!-- <div class="col-6 col-s-9"><div class="welcome">
        <i class="fa fa-ambulance">&nbsp;&nbsp;</i><span>Welcome to Ambulance Service</span>
    </div></div> -->
    <div class="container">
    <form class="login-form" id="idForm" action="" name="idForm" method="post">
      
        <div class="login-wrap">
          <p class="login-img"><i class="icon_lock_alt"></i></p>
          <div class="input-group">
            <span class="input-group-addon"><i class="icon_profile"></i></span>
            <input type="text" class="form-control" placeholder="Username" id="credentials" name="username" required>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="icon_key_alt"></i></span>
            <input type="password" class="form-control" placeholder="Password" id="psw" name="password" required>
          </div>

          <div class="selectbl" style="width: 500px;">
            <select id="idForm" name="role" class="form-control" style="width:200px;">
              <option value="" selected disabled>Please Select:</option>    
              <option value="adminhome">Admin</option>
              <option value="facultyHome">Faculty</option>
            </select>
          </div>

          <label class="checkbox">
            <input type="checkbox" name="checkbox" value="remember-me"> Remember me
            <span class="pull-right"> <a href="#"> Forgot Password?</a></span>
          </label>

          <div class="clear">
            <button class="btn btn-primary btn-lg btn-block" type="button" class="signupbtn" id="btnSubmit" value=" Submit " >Login</button>
            <button class="btn btn-primary btn-lg btn-block" type="reset" class="cancelbtn">Clear</button>
          </div>

          

        </div>
    </form>
    </div>

</body>

</html>