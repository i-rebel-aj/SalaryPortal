<%- include('../Partials/MetaTag/adminMeta.ejs') %>

<title>Register Faculty</title>

<%- include('../Partials/Navbar/adminNav.ejs') %>
<%- include('../Partials/SideBar/adminside.ejs') %>
        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                Add Employees
              </header>
              <div class="container mt-3">
                <form action="#" method="post" class="form-horizontal ">
                      
                  <div class="custom-file col-lg-12 mb-3">
                    <input type="file" class="custom-file-input" id="customFile" name="filename">
                    <label class="custom-file-label" for="customFile">Choose csv File</label>
                  </div>
                  <div class="mt-3" form-group>
                    <button type="button" class="btn btn-primary btn-md">Submit</button>
                  </div>
                </form>
              </div>
              <h3 style="text-align: center;">OR</h3>
              <div class="panel-body">

                <form class="form-horizontal" id="form" method="post" action="/admin/adduser">

                  <div class="form-group">
                    <label class="col-sm-2 control-label">Full Name</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="name" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-lg-2" for="select" required>Department</label>
                    <div class="col-lg-10">
                      <select class="form-control form-control-lg" name="department">
                        <option value="" selected disabled></option>
                            <option>ECE</option>
                            <option>CSE</option>
                      </select>
                    </div>
                  </div>
                  

                  <div class="form-group">
                    <label class="control-label col-lg-2" for="select" required>Type</label>
                    <div class="col-lg-10">
                      <select class="form-control form-control-lg" name="type">
                        <option value="" selected disabled>Choose One</option>
                            <option>Faculty</option>
                            <option>Staff</option>
                            <option>Management</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">Employee Id</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="employeeId" required>
                    </div>
                  </div>

                  <div class="form-group">
                      <label class="col-sm-2 control-label" for="join_date">Joining Date</label>
                      <div class="col-sm-10">
                        <input type="date" id="join_date" class="form-control" name="enrolledDate" required>
                      </div>  
                  </div>

                  <div class="form-group">
                    <label class="control-label col-lg-2" for="select" required>Gender</label>
                    <div class="col-lg-10">
                      <select class="form-control form-control-lg" name="gender">
                        <option value="" selected disabled>Choose One</option>
                            <option>Male</option>
                            <option>Female</option>
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="email" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-lg-2" for="select" required>Designation</label>
                    <div class="col-lg-10">
                      <select class="form-control form-control-lg" name="designation">
                        <option value="" selected disabled>Choose One</option>
                            <option>Designation 1</option>
                            <option>Designation 2</option>
                            <option>Designation 3</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                      <input class="form-control" type="password" name="pass" id="pass" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">Confirm Password</label>
                    <div class="col-sm-10">
                      <input class="form-control" type="password" name="confirmpass" id="pass" required>
                    </div>
                  </div>
                  <input type="submit" name="Register" class="form-control">
                </form>
              </div>
            </section>
          </div>
        </div>
  <%- include('../Partials/Scripts/adminscript.ejs') %>