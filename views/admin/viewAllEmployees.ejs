<%- include('../Partials/MetaTag/adminMeta.ejs') %>
<title>Super Admin</title>
<%- include('../Partials/Navbar/adminNav.ejs') %>
<%- include('../Partials/flash_messages') %>
<%- include('../Partials/SideBar/adminside.ejs') %>
<div class="container">
    <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Employee ID</th>
            <th scope="col">Employee Type</th>
            <th scope="col">Designation Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Designation, Department</th>
            <th scope="col">Get Salary Details</th>
            <th scope="col">View Leave Details</th>
            <th scope="col">Griviences</th>
          </tr>
        </thead>
        <tbody>
         <% employees.forEach(employee => { %>
             <tr>
                <td><%= employee.employeeID %> </td>
                <td><%= employee.Type %> </td>
                <td><%= employee.designationId %> </td>
                <td><%= employee.name %> </td>
                <td><%= employee.email %> </td>
                <td><%= employee.designation.designationName %> , {Department to be added soon} </td>
                <td><a href="/admin/employee/<%=employee._id%>/salary" class="btn btn-success btn-md">Get Salary Details</a></td>
                <td><a href="/admin/employee/<%=employee._id%>/leave" class="btn btn-warning btn-md">View leaves</a></td>
                <td><a href=" " class="btn btn-info btn-md">Griviences</a></td>
             </tr>
         <% }); %> 
        </tbody>
      </table>
</div>

<%- include('../Partials/Scripts/adminscript.ejs') %>