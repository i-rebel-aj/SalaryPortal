<%- include('../Partials/MetaTag/facultymeta.ejs') %>
<title>Apply Leave</title>

<%- include('../Partials/Navbar/facultyNav.ejs') %>
<%- include('../Partials/SideBar/facultyside.ejs') %>
        
        <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-file-text-o"></i> Leave </h3>
            <ol class="breadcrumb">
              <li><i class="fa fa-home"></i><a href="/facultyHome">Home</a></li>
              <li><i class="icon_document_alt"></i>Apply For Leave</li>
            </ol>
          </div>
        </div>
        

        <div class="row" id="form">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                Leave Form
              </header>
              <div class="panel-body">


                <form class="form-horizontal " method="post" action="/faculty/applyleave">

                  <div class="form-group">
                    <label class="col-sm-2 control-label">Subject</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="subject" required>
                    </div>
                  </div>


                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="reason">Reason:</label>
                    <div class="col-sm-10">
                      <textarea class="form-control" rows="5" id="reason" name="reason" required></textarea>  
                    </div>
                    </div>

                  <div class="row">
                   
                    <div class="form-group row col-6">
                      <label for="example-month-input" class="col-2 col-form-label">Leave From</label>
                      <div class="col-sm-10">
                        <input class="form-control" type="date" name="startDate" value="2011-08" id="example-month-input" required>
                      </div>
                    </div>

                    <div class="form-group row col-6 ">
                      <label for="example-month-input" class="col-2 col-form-label">To</label>
                      <div class="col-sm-10">
                        <input class="form-control" type="date" name="endDate" value="2011-08" id="example-month-input" required>
                      </div>
                    </div>

                  </div>

                  <input type="submit" name="Register" class="form-control">
                </form>

              </div>

            </section>

          </div>
        </div>
  <%- include('../Partials/Scripts/facultyscripts.ejs') %>