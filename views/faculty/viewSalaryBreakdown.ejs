<%- include('../Partials/MetaTag/facultymeta.ejs') %>
  <title>Profile</title>
    <%- include('../Partials/Navbar/facultyNav.ejs') %>

     <%- include('../Partials/SideBar/facultyside.ejs') %>
        <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-user" aria-hidden="true"></i></i></h3>
            <ol class="breadcrumb">
              <li><i class="sfa fa-home"></i><a href="/facultyHome">Home</a></li>
                <% let from= new Date(salary.from) %> 
                <% let to= new Date(salary.to) %> 
              <li><i class="icon_document_alt"></i>Salary  (From <%= from.toDateString() %>, To <%= to.toDateString() %> ) and SalaryId <%= salary._id %> Breakdown </li>
            </ol>
          </div>
            <div class="container">
                <h2>Payment Info is as follows</h2>
                <ul>
                    <li>Total Amount Settled: <span style="color: red; font-weight: bolder;"><%= salary.totalAmountSettled %> </span></li>
                    <li>Tax Deductions: <span style="color: red; font-weight: bolder;"><%= salary.taxDeduction %> </span></li>
                    <li>Leave Deductions Settled: <span style="color: red; font-weight: bolder;"><%= salary.leaveDeductions %> </span></li>
                    <li>Allowance Income: <span style="color: olivedrab; font-weight: bolder;">Cooming Soon! </span></li>
                </ul>
                <% salary.paymentReceipts.forEach((payment)=>{%>
                    <li class="list-group-item">
                    <h2>Remarks: <%= payment.remarks %></h2>
                        <br>
                    <h2>Associated Files</h2>
                    <% if(payment.fileInfo.file_type==='image'){%>
                        <img class="bd-placeholder-img" width="500" height="500" src="/<%=payment.fileInfo.path%> ">
                    <%} %> 
                    <% if(payment.fileInfo.file_type==='application'){%>
                        <embed src="/<%=payment.fileInfo.path%>" type="application/pdf" width="100%" height="600px" />
                    <%} %> 
                    </li>
                <%}) %> 
            </div>          
         <hr>
 
 <%- include('../Partials/Scripts/facultyscripts.ejs') %>
